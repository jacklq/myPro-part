<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lq.lqproj.dao.StudentDao">

    <resultMap type="com.lq.lqproj.entity.Student" id="StudentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="num" column="num" jdbcType="VARCHAR"/>
        <result property="sname" column="sname" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="VARCHAR"/>
        <result property="cretim" column="creTim" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--增删改查-->
    <!--1-新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into lq.student(num, sname, sex, age, creTim)
        values (#{num}, #{sname}, #{sex}, #{age}, #{cretim})
    </insert>

    <!--2-通过主键删除-->
    <delete id="deleteById">
        delete from lq.student where id = #{id}
    </delete>

    <!--3-通过主键修改数据-->
    <update id="update">
        update lq.student
        <set>
            <if test="num != null and num != ''">
                num = #{num},
            </if>
            <if test="sname != null and sname != ''">
                sname = #{sname},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="age != null and age != ''">
                age = #{age},
            </if>
            <if test="cretim != null">
                creTim = #{cretim},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--4-查询单个-->
    <select id="queryById" resultMap="StudentMap">
        select
          id, num, sname, sex, age, creTim
        from lq.student
        where id = #{id}
    </select>
    <!--批量操作-->


    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StudentMap">
        select
          id, num, sname, sex, age, creTim
        from lq.student
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StudentMap">
        select
        id, num, sname, sex, age, creTim
        from lq.student
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="num != null and num != ''">
                and num = #{num}
            </if>
            <if test="sname != null and sname != ''">
                and sname = #{sname}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="age != null and age != ''">
                and age = #{age}
            </if>
            <if test="cretim != null">
                and creTim = #{cretim}
            </if>
        </where>
    </select>


    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into lq.student(num, sname, sex, age, creTim)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.num}, #{entity.sname}, #{entity.sex}, #{entity.age}, #{entity.cretim})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into lq.student(num, sname, sex, age, creTim)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.num}, #{entity.sname}, #{entity.sex}, #{entity.age}, #{entity.cretim})
        </foreach>
        on duplicate key update
        num = values(num) , sname = values(sname) , sex = values(sex) , age = values(age) , creTim = values(creTim)
    </insert>


</mapper>